<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ddemo.OmStore.controller.NewProductController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="47.0" prefWidth="500.0">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
         <children>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#btnBackEvent" prefHeight="31.0" prefWidth="119.0" text="Back">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label text="Add New Product" textAlignment="CENTER" VBox.vgrow="SOMETIMES">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
         <font>
            <Font name="Arial Black" size="48.0" />
         </font>
      </Label>
      <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
         <children>
            <ImageView fx:id="imgProduct" fitHeight="159.0" fitWidth="223.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ImageView>
            <Button fx:id="btnSelectImg" mnemonicParsing="false" onAction="#btnSelectImgEvent" text="Select Image" VBox.vgrow="SOMETIMES">
               <VBox.margin>
                  <Insets right="50.0" />
               </VBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets right="380.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="30.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="txtName" promptText="Name" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="30.0">
         <children>
            <Label text="Price" />
            <TextField fx:id="txtPrice" promptText="Price">
               <HBox.margin>
                  <Insets left="7.0" />
               </HBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="30.0">
         <children>
            <Label text="Date" />
            <TextField fx:id="pkDate" onAction="#txtDateEvent" promptText="insert_Date">
               <HBox.margin>
                  <Insets left="8.0" />
               </HBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </HBox>
      <Button fx:id="btnSave" mnemonicParsing="false" onAction="#btnSaveEvent" prefHeight="50.0" prefWidth="760.0" text="Save">
         <VBox.margin>
            <Insets top="70.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
